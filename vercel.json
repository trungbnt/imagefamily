{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "client/build/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "client/build/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "client/build/manifest.json"
    },
    {
      "src": "^/logo(.*).png",
      "dest": "client/build/logo$1.png"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ]
} 